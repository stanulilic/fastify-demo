<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <link rel="stylesheet" type="text/css" href="/public/styles.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <div id="branding">
          <h1>Blog</h1>
        </div>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/post/new">Create New Post</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <h1>Blog Posts</h1>
      <ul class="posts">
        <% posts.forEach(post => { %>
        <li>
          <a href="/post/<%= post.id %>"><%= post.title %></a>
          <form
            action="/post/<%= post.id %>/delete"
            method="post"
            class="posts-form"
          >
            <button type="submit">Delete</button>
          </form>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
